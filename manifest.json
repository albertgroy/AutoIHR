{
  "manifest_version": 3,
  "name": "Boss 职位采集",
  "version": "1.0",
  "description": "自动采集 Boss 直聘网站职位信息的 Chrome 扩展",
  "permissions": ["webRequest", "storage", "activeTab", "scripting"],
  "host_permissions": ["*://www.zhipin.com/*"],
  "background": {
    "service_worker": "background/interceptor.js",
    "type": "module"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "matches": ["*://www.zhipin.com/*"],
      "js": ["content/dashboard/inject.js"],
      "css": ["content/dashboard/style.less"]
    }
  ]
}
